<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ctadmin.myapplication.Main6Activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="194dp"
        android:layout_height="268dp"
        app:srcCompat="@drawable/g2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secret Agent"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Buy $12"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="240dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geronimo's day starts as usual --- with a big pot of hot cheddar. But when he looks out the window, he sees an ominous sight: a suspicious-looking character lurking about. On the way to the subway, he sees him again, followed by another sighting at his subway stop. All day long, wherever Geronimo goes, there's the guy."
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="364dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp" />
</RelativeLayout>
